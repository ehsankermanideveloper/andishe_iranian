<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" style="padding-right: 0px;padding-left: 0px;">
    <div class="card">
        <h5 class="card-header">ایجاد دسته بندی جدید</h5>
        <div class="card-body">
            <%- include('../../layouts/validationError' , {Errors : ClientError}) %>
                <form action="/admin/languages/<%= language.title %>/edit?_method=PUT" method="POST">
                    <div class="form-group row">
                        <div class="col">
                            <label for="number" class="control-label font-weight-bold">عنوان زبان</label>
                            <input type="text" class="form-control" name="title" id="number"
                                placeholder="عنوان زبان را وارد کنید" value="<%= language.title %>">
                        </div>
                        <div class="form-group row text-right">
                            <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                                <button type="submit" class="btn btn-space btn-primary">ارسال</button>
                            </div>
                        </div>
                </form>
        </div>
    </div>
</div>
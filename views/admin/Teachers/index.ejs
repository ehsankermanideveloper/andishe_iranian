<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">دوره ها</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>نام دبیر</th>
                                <th>تجربه</th>
                                <th>دبیره</th>
                                <th>برای وب سایت </th>
                                <th>تنظیمات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% tearchers.forEach((tearcher)=>{%>
                                <tr>
                                    <td>
                                        <%- tearcher.firstName + tearcher.lastName%>
                                    </td>
                                    <td>
                                        <%- tearcher.experience%>
                                    </td>
                                    <td>
                                        <%- tearcher.teacherFor%>
                                    </td>
                                    <td>
                                        <%- tearcher.language.title %>
                                    </td>
                                    <td>
                                        <div>
                                            <a href="/admin/teachers/<%=tearcher._id%>/edit"
                                                class="btn btn-sm btn-primary">ویرایش</a>
                                            <form action="/admin/teachers/<%= tearcher._id %>/remove?_method=DELETE"
                                                method="post">
                                                <button class="btn btn-sm btn-danger">حذف</button>
                                            </form>

                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <br><br>
                </div>
            </div>
        </div>
    </div>
</div>
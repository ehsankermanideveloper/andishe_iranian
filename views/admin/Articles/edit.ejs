<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" style="padding-right: 0px;padding-left: 0px;">
    <div class="card">
        <h5 class="card-header">ویرایش دوره </h5>

        <div class="card-body">
            <%- include('../../layouts/admin/adminError') %>
                <% if(course.image){%>
                    <img src="<%=course.image%>" class="img-fluid" alt="<%=course.title%>">
                    <%}else{%>
                        <p>تصویر دوره را انتخاب نکرده اید</p>
                        <%}%>
                            <form id="validationform" data-parsley-validate="" novalidate="" method="POST"
                                action="/admin/course/<%= course._id %>/edit?_method=PUT">
                                <div class="form-group row">
                                    <div class="col">
                                        <label for="title" class="control-label font-weight-bold">عنوان دوره</label>
                                        <input type="text" class="form-control" name="title" id="title"
                                            placeholder="عنوان را وارد کنید" value="<%=course.title%>">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col">
                                        <label for="body" class="control-label font-weight-bold">متن</label>
                                        <textarea rows="5" class="form-control" name="body" id="body"
                                            placeholder="متن  را وارد کنید"><%=course.body%></textarea>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col">
                                        <label for="images" class="control-label font-weight-bold">تصویر
                                            دوره</label>
                                        <input type="text" class="form-control" name="file" id="images"
                                            placeholder="تصویر دوره را وارد کنید" value="<%= course.image %>">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col">
                                        <label for="images" class="control-label font-weight-bold">نام فولدر دوره</label>
                                        <input type="text" class="form-control" name="folderName" id="images" value="<%= course.folderName %>">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col">
                                        <label for="category"
                                            class="control-label font-weight-bold font-weight-bold">دسته
                                            بندی</label>
                                        <select name="category" id="category" class="form-control">
                                            <% category.forEach((cate)=>{%>
                                                <option value="<%=cate._id%>" <% (cate._id==course.category )
                                                    ? 'selected' : '' %>><%= cate.title %>
                                                </option>
                                                <%})%>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col">
                                        <label for="tags" class="control-label font-weight-bold">دانش آموزان</label>
                                        <input type="number" class="form-control" name="maxStudent" id="tags"
                                            placeholder="حداکثر تعداد دانش آموزان" value="<%= course.maxStudent %>">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col">
                                        <label for="tags" class="control-label font-weight-bold">قیمت</label>
                                        <input type="text" class="form-control" name="price" id="tags"
                                            placeholder="قیمت" required value="<%= course.price %>">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col">
                                        <label for="category"
                                            class="control-label font-weight-bold font-weight-bold">نوع
                                            دوره</label>
                                        <select name="type" id="category" class="form-control">
                                            <option value="cash" <% (course.type=='cash' ) ? 'selected' : '' %>
                                                >نقدی</option>
                                            <option value="free" <% (course.type=='free' ) ? 'selected' : '' %>>رایگان
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col">
                                        <label for="tags" class="control-label font-weight-bold">تگ ها</label>
                                        <input type="text" class="form-control" name="tags" id="tags"
                                            placeholder="تگ ها را وارد کنید" value="<%= course.tags%>">
                                    </div>
                                </div>
                                <div class="form-group row text-right">
                                    <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                                        <button type="submit" class="btn btn-space btn-primary">ویرایش</button>
                                    </div>
                                </div>
                            </form>
        </div>
    </div>
</div>
<script src="//cdn.ckeditor.com/4.16.0/full/ckeditor.js"></script>
<script>
    CKEDITOR.replace('body');
</script>

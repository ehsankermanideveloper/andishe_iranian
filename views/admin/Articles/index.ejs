<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">دوره ها</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>

                            <tr>
                                <th>نام دوره</th>
                                <th>دسته بندی</th>
                                <th>ایجاد شده در :</th>
                                <th>زمان</th>
                                <th>ایجاد شده توسط</th>
                                <th>تنظیمات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% courses.docs.forEach((course)=>{%>
                            <tr>
                                <td>
                                    <%- course.title%>
                                </td>
                                <% if(course.category) {%>
                                <td>
                                    <%- course.category.title %>
                                </td>
                                <%}else{%>
                                <td>دسته بندی حذف شده است </td>
                                <%}%>
                                                <td>
                                                    <%- convertTime(course.createdAt).format('jYYYY/jMM/jD') %>
                                </td>

                                <td>
                                    <%- course.time%>
                                </td>
                                <td>
                                    <%- course.User.username%>
                                </td>
                                <td>
                                    <div>
                                        <a href="/admin/course/<%=course._id%>/edit"
                                            class="btn btn-sm btn-primary">ویرایش</a>
                                        <!--<form action="/admin/course/<%= course._id %>/remove?_method=DELETE"-->
                                        <!--    method="post">-->
                                        <!--    <input type="hidden" name="path"-->
                                        <!--        value="<%= course.image.slice(Number(course.image.lastIndexOf('/'))) %>">-->

                                        <!--    <button class="btn btn-sm btn-danger">حذف</button>-->
                                        <!--</form>-->
                                        <a href="/admin/course/<%= course._id %>/Students" class="btn btn-sm btn-success">زبان آموزان</a>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <br><br>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../layouts/paginate' , {pagination : courses , links : '/admin/course' }) %>

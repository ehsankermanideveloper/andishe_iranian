<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">گالری</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>شماره</th>
                                <th>عکس</th>
                                <th>تنظیمات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% gallerys.forEach((gallery,index)=>{%>
                                <tr>
                                    <td>
                                        <%- index+1 %>
                                    </td>
                                    <td>
                                        <img style="width: 100px;height: 50px;" src="<%- gallery.imageDir.slice(8) %>" alt="">
                                    </td>
                                    <td>
                                        <div>
                                            <form action="/admin/gallerys/<%= gallery._id %>/remove?_method=DELETE"
                                                method="post">
                                                <button class="btn btn-sm btn-danger">حذف</button>
                                            </form>

                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <br><br>
                </div>
            </div>
        </div>
    </div>
</div>
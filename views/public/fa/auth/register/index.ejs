<section class="register-area ptb-50">
    <div class="container">
        <div class="register-form">
            <h2>ایجاد یک حساب کاربری</h2>
                <%- include('../../../../layouts/validationError' , {Errors : ClientError}) %>
                    <form action="/fa/auth/register" method="post">
                        <div class="form-group">
                            <label>نام</label>
                            <input type="text" name="username" class="form-control" placeholder="نام">
                        </div>
                        <div class="form-group">
                            <label>کد ملی</label>
                            <input type="text" name="nationalId" class="form-control" placeholder="کد ملی">
                        </div>
                        <div class="form-group">
                            <label>ایمیل</label>
                            <input type="email" name="email" class="form-control" placeholder="ایمیل">
                        </div>
                        <div class="form-group">
                            <label>گذرواژه</label>
                            <input type="text" name="password" class="form-control" placeholder="گذرواژه">
                        </div>
                        <div class="row align-items-center">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="checkme">
                                    <label class="form-check-label" for="checkme">نمایش گذرواژه؟</label>
                                </div>
                            </div>
                        </div>
                        <button type="submit">ثبت نام</button>
                    </form>
                    <div class="important-text">
                        <p>حساب کاربری دارید؟ <a href="login.html">ورود کاربران</a></p>
                    </div>
        </div>
    </div>
</section>
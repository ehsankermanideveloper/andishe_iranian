<div class="d-flex justify-content-center">
    <% if (pagination.pages > 0) { %>
    <ul class="pagination center"  style="direction: rtl;">
        <% var i = ((pagination.page) > 5 ? (pagination.page) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="page-item disabled"><a class="page-link" href="<%- links%>?page=<%= i %>">...</a></li>
        <% } %>
        <% for ( ;i <= ((pagination.page) + 4) && i <= pagination.pages; i++) { %>
        <% if (i == pagination.page) { %>
        <li class="page-item">
            <% if(links == '/courses'){%>
                <button class="page-link active btn"  form="coursesForm" value="<%= i %>" name="page"><%= i %></button>
            <%}else{%>
                <a class="page-link  p-4" href="<%- links%>?page=<%= i %>"><%= i %></a>
            <%}%>
        </li>
        <% } else { %>
        <li class="">
            <% if(links == '/courses'){%>
                <button class="page-link btn"  form="coursesForm" value="<%= i %>" name="page"><%= i %></button>
            <%}else{%>
                <a class="page-link " href="<%- links%>?page=<%= i %>"><%= i %></a>
            <%}%>
        </li>
        <% } %>
        <% if (i == (pagination.page) + 4 && i < pagination.pages) { %>
        <li class=" disabled"><a class="page-link" >...</a></li>
        <% } %>
        <% } %>

    </ul>
    <% } %>
</div>
<style>
    li{
        margin: auto 5px;
        border-radius: 4px;
    }
</style>